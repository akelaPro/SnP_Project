# Секретный ключ Django - держите в секрете!
SECRET_KEY='ваш_секретный_ключ_django'

# Режим отладки (True/False) - в продакшене должно быть False!
DEBUG=True

# URL для подключения к PostgreSQL
DATABASE_URL='postgres://логин:пароль@хост:порт/база_данных'

# Настройки почты для отправки писем
EMAIL="ваша_почта@example.com"
EMAIL_PASSWORD="пароль_от_почты_или_специальный_пароль_приложения"
EMAIL_ENABLED=True  # Поставьте False для отключения отправки писем

# Настройки почтового сервера
EMAIL_HOST="smtp.yandex.ru"
EMAIL_PORT=465  # Порт для SSL (Yandex SMTP)

# Данные для доступа к Yandex Cloud Object Storage
YANDEX_ID_CLOUD_SERVICE="идентификатор_сервисного_аккаунта"
YANDEX_SECRET_KEY_CLOUD_SERVICE="секретный_ключ_сервисного_аккаунта"
YANDEX_BUCKET_NAME="имя_бакета_в_облаке"

# S3-совместимый эндпоинт для Yandex Cloud Storage
AWS_S3_ENDPOINT_URL="https://storage.yandexcloud.net"

# Данные для OAuth-авторизации через ВКонтакте
SOCIAL_AUTH_VK_OAUTH2_KEY="ID_приложения_VK"
SOCIAL_AUTH_VK_OAUTH2_SECRET="Защищённый_ключ_приложения_VK"